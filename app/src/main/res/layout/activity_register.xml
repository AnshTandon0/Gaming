<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".phoneAuth.RegisterActivity"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:visibility="invisible"
        android:padding="5dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="#F0F2F6"
        android:src="@drawable/ic_back"
        android:tint="#596C84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,UnusedAttribute,UseAppTint" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bold_roboto"
        android:text="New account"
        android:textColor="@color/colorPrimary"
        android:textSize="43sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
       tools:ignore="ContentDescription,HardcodedText" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bold_roboto"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Type profile details"
        android:textColor="#596C84"
        android:layout_marginStart="24dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
       tools:ignore="ContentDescription,HardcodedText" />-->


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:backgroundTint="#F0F2F6"
            tools:ignore="UnusedAttribute">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:fontFamily="@font/bold_roboto"
                android:gravity="center_vertical"
                android:hint="Name"
                android:inputType="textVisiblePassword"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColorHint="#8B8D93"
                android:textSize="20sp"
                tools:ignore="Autofill,HardcodedText" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:backgroundTint="#F0F2F6"
            tools:ignore="UnusedAttribute">

        <EditText
            android:id="@+id/username"
            android:inputType="textVisiblePassword"
            android:digits="abcdefghijklmnopqrstuvwxyz0123456789._"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:fontFamily="@font/bold_roboto"
            android:gravity="center_vertical"
            android:hint="Username"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColorHint="#8B8D93"
            android:textSize="20sp"
            tools:ignore="Autofill,HardcodedText" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/bold_roboto"
            android:gravity="center_horizontal"
            android:text="Who can send me message"
            android:textAlignment="center"
            android:textColor="?attr/textcolor"
            android:textSize="18sp"
            tools:ignore="ContentDescription,HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/redio_pm_anyone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anyone"
                android:fontFamily="@font/bold_roboto"
                android:textColor="?attr/texttwocolor"
                android:textSize="18sp"
                android:layout_marginLeft="-5dp"/>

            <RadioButton
                android:id="@+id/redio_pm_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Players I follow"
                android:fontFamily="@font/bold_roboto"
                android:textColor="?attr/texttwocolor"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"/>

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bold_roboto"
                android:text="Anyone / Players I follow"
                android:textColor="?attr/texttwocolor"
                android:textSize="18sp"
                tools:ignore="ContentDescription,HardcodedText" />

            <Switch
                android:id="@+id/sw_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>-->

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/bold_roboto"
            android:gravity="center_horizontal"
            android:text="Who can add me in clubs"
            android:textAlignment="center"
            android:textColor="?attr/textcolor"
            android:textSize="18sp"
            tools:ignore="ContentDescription,HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/radio_pc_anyone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anyone"
                android:fontFamily="@font/bold_roboto"
                android:textColor="?attr/texttwocolor"
                android:textSize="18sp"
                android:layout_marginLeft="-5dp"/>

            <RadioButton
                android:id="@+id/radio_pc_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Players I follow"
                android:fontFamily="@font/bold_roboto"
                android:textColor="?attr/texttwocolor"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"/>

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bold_roboto"
                android:text="Anyone / Players I follow"
                android:textColor="?attr/texttwocolor"
                android:textSize="18sp"
                tools:ignore="ContentDescription,HardcodedText" />

            <Switch
                android:id="@+id/sw_clubs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>-->

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/bold_roboto"
            android:gravity="center_horizontal"
            android:text="Who can poke me"
            android:textAlignment="center"
            android:textColor="?attr/textcolor"
            android:textSize="18sp"
            tools:ignore="ContentDescription,HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/radio_poke_anyone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anyone"
                android:fontFamily="@font/bold_roboto"
                android:textColor="?attr/texttwocolor"
                android:textSize="18sp"
                android:layout_marginLeft="-5dp"/>

            <RadioButton
                android:id="@+id/radio_poke_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Players I follow"
                android:fontFamily="@font/bold_roboto"
                android:textColor="?attr/texttwocolor"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/btn_round"
        android:backgroundTint="@color/colorPrimary"
        android:text="Sign up"
        android:textSize="20sp"
        android:textColor="#fff"
        android:fontFamily="@font/bold_roboto"
        android:stateListAnimator="@null"
        android:gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorSize="25dp"
        android:layout_marginEnd="16dp"
        app:indicatorColor="#fff"
        android:id="@+id/progressBar"
        app:trackCornerRadius="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/login"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:indeterminate="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login">

        <TextView
            android:id="@+id/forgot"
            android:text="©Flexster"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:fontFamily="@font/bold_roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           tools:ignore="ContentDescription,HardcodedText"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>