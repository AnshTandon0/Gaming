<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.GameListActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/ll_new_game_add">

        <LinearLayout
            android:background="?attr/layoutcolor"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/back"
                android:padding="5dp"
                android:background="@drawable/circle"
                android:backgroundTint="?attr/backgroundcolor"
                android:src="@drawable/ic_back"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:tint="#596C84"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:background="@drawable/btn_round"
                android:backgroundTint="?attr/backgroundcolor"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:id="@+id/searchll"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <ImageView
                    android:layout_gravity="center"
                    android:padding="9dp"
                    android:src="@drawable/ic_search"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:tint="#596C84"
                    tools:ignore="ContentDescription" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:fontFamily="@font/bold_roboto"
                    android:hint="Search..."
                    android:textColor="?attr/textcolor"
                    android:textColorHint="?attr/texttwocolor"
                    android:textSize="16sp"
                    android:imeOptions="actionSearch"
                    tools:ignore="Autofill,HardcodedText,TextFields" />

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_game_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_new_game_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_new_game_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:fontFamily="@font/bold_roboto"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>