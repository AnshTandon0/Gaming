<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/layoutcolor"
    tools:context=".marketPlace.ProductDetailsActivity"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/upload_product"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription,HardcodedText" />

    <ImageView
        android:id="@+id/back"
        android:layout_margin="8dp"
        android:src="@drawable/ic_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:tint="?attr/texttwocolor"
        android:contentDescription="TODO"
       tools:ignore="ContentDescription,HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/cover"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/u"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/avatar"
                android:id="@+id/dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/bold_roboto"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/verified"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/ic_verify"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/admin"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/ic_admin"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="34dp"
                        android:layout_height="14dp"
                        android:background="@drawable/ic_engagement_bg"
                        android:orientation="horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5.5dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_engagement"/>

                        <TextView
                            android:id="@+id/txt_post_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold_roboto"
                            android:text="1"
                            android:textColor="#DC271B"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="ContentDescription,HardcodedText"
                            android:layout_marginEnd="3dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="34dp"
                        android:layout_height="14dp"
                        android:background="@drawable/ic_skill_bg"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5.5dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_skill"/>

                        <TextView
                            android:id="@+id/txt_fight_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold_roboto"
                            android:text="1"
                            android:textColor="#BB1AF3"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="ContentDescription,HardcodedText"
                            android:layout_marginEnd="3dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="time"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/bold_roboto"
                    android:textColor="?attr/texttwocolor"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:padding="2dp"
                android:src="@drawable/ic_more"
                app:tint="?attr/texttwocolor"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/bold_roboto"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="game name"
            android:fontFamily="@font/bold_roboto"
            android:id="@+id/type"
            android:textColor="?attr/texttwocolor"
            android:textSize="15sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"
            android:layout_marginStart="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/bold_roboto"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_round"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/bold_roboto"
            android:stateListAnimator="@null"
            android:text="ACCEPT CHALLENGE"
            android:textColor="#fff"
            tools:ignore="ContentDescription,HardcodedText" />

    </LinearLayout>

</RelativeLayout>