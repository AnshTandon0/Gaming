<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/layoutcolor"
    android:id="@+id/main"
    tools:context=".profile.EditProfileActivity"
    tools:ignore="Overdraw">

    <RelativeLayout
        android:id="@+id/cover_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cover"
            tools:ignore="ContentDescription" />

        <VideoView
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:trackThickness="2dp"
            app:trackCornerRadius="2dp"
            android:indeterminate="true" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/editCover"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_aperture"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#fff"
        tools:ignore="ContentDescription,UnusedAttribute" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_back"
        tools:ignore="ContentDescription,UnusedAttribute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#fff" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/avatar"
        app:layout_constraintBottom_toBottomOf="@+id/cover_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cover_layout" />

    <ImageView
        android:id="@+id/editDp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/btn_round"
        android:backgroundTint="#F0F2F6"
        android:padding="6dp"
        android:src="@drawable/ic_aperture"
        app:layout_constraintBottom_toBottomOf="@+id/dp"
        app:layout_constraintEnd_toEndOf="@+id/dp"
        app:tint="#596C84"
        tools:ignore="ContentDescription,UnusedAttribute" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dp"
        app:layout_constraintBottom_toTopOf="@+id/signUp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:overScrollMode="never"
            android:scrollbarThumbVertical="@null">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:text="Name"
                        android:textColor="?attr/textcolor"
                        android:textSize="20sp"
                        tools:ignore="ContentDescription,HardcodedText" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@null"
                        android:fontFamily="@font/bold_roboto"
                        android:hint="Name"
                        android:inputType="text"
                        android:textColor="?attr/texttwocolor"
                        android:textColorHint="?attr/texttwocolor"
                        android:textSize="17sp"
                        tools:ignore="Autofill,HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:text="Username"
                        android:textColor="?attr/textcolor"
                        android:textSize="20sp"
                        tools:ignore="ContentDescription,HardcodedText" />

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@null"
                        android:digits="abcdefghijklmnopqrstuvwxyz0123456789._"
                        android:fontFamily="@font/bold_roboto"
                        android:hint="Username"
                        android:inputType="text"
                        android:textColor="?attr/texttwocolor"
                        android:textColorHint="?attr/texttwocolor"
                        android:textSize="17sp"
                        tools:ignore="Autofill,HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:text="Games I play"
                        android:textColor="?attr/textcolor"
                        android:textSize="20sp"
                        tools:ignore="ContentDescription,HardcodedText" />

                    <com.hendraanggrian.appcompat.widget.SocialEditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@null"
                        android:fontFamily="@font/bold_roboto"
                        android:hint="Game name"
                        android:textColor="?attr/texttwocolor"
                        android:textColorHint="?attr/texttwocolor"
                        android:textSize="17sp"
                        android:autoLink="web"
                        android:linksClickable="true"
                        android:textColorLink="@color/colorPrimary"
                        android:id="@+id/bio"
                        app:socialFlags="hashtag|mention"
                        app:hashtagColor="@color/colorPrimary"
                        app:mentionColor="@color/colorPrimary"
                        tools:ignore="ContentDescription,HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:text="Location"
                        android:textColor="?attr/textcolor"
                        android:textSize="20sp"
                        tools:ignore="ContentDescription,HardcodedText" />

                    <EditText
                        android:id="@+id/location"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:background="@null"
                        android:fontFamily="@font/bold_roboto"
                        android:hint="Location"
                        android:inputType="text"
                        android:textColor="?attr/texttwocolor"
                        android:textColorHint="?attr/texttwocolor"
                        android:textSize="17sp"
                        tools:ignore="Autofill,HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:text="Contact link"
                        android:textColor="?attr/textcolor"
                        android:textSize="20sp"
                        tools:ignore="ContentDescription,HardcodedText" />

                    <EditText
                        android:id="@+id/link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@null"
                        android:textColorLink="@color/colorPrimary"
                        android:fontFamily="@font/bold_roboto"
                        android:hint="Email / URL"
                        android:autoLink="web"
                        android:linksClickable="true"
                        android:inputType="textWebEmailAddress"
                        android:textColor="?attr/texttwocolor"
                        android:textColorHint="?attr/texttwocolor"
                        android:textSize="17sp"
                        tools:ignore="Autofill,HardcodedText" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/bold_roboto"
                    android:gravity="center_horizontal"
                    android:text="Who can send me message"
                    android:textAlignment="center"
                    android:textColor="?attr/textcolor"
                    android:textSize="20sp"
                    tools:ignore="ContentDescription,HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <!--<TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/bold_roboto"
                        android:text="Anyone / Players I follow"
                        android:textColor="?attr/texttwocolor"
                        android:textSize="17sp"
                        tools:ignore="ContentDescription,HardcodedText" />

                    <Switch
                        android:id="@+id/sw_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>-->

                    <RadioButton
                        android:id="@+id/redio_pm_anyone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anyone"
                        android:fontFamily="@font/bold_roboto"
                        android:textColor="?attr/texttwocolor"
                        android:textSize="17sp"
                        android:layout_marginLeft="-4dp"/>

                    <RadioButton
                        android:id="@+id/redio_pm_private"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Players I follow"
                        android:fontFamily="@font/bold_roboto"
                        android:textColor="?attr/texttwocolor"
                        android:textSize="17sp"
                        android:layout_marginLeft="15dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/bold_roboto"
                    android:gravity="center_horizontal"
                    android:text="Who can add me in clubs"
                    android:textAlignment="center"
                    android:textColor="?attr/textcolor"
                    android:textSize="20sp"
                    tools:ignore="ContentDescription,HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <RadioButton
                        android:id="@+id/radio_pc_anyone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anyone"
                        android:fontFamily="@font/bold_roboto"
                        android:textColor="?attr/texttwocolor"
                        android:textSize="17sp"
                        android:layout_marginLeft="-4dp"/>

                    <RadioButton
                        android:id="@+id/radio_pc_private"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Players I follow"
                        android:fontFamily="@font/bold_roboto"
                        android:textColor="?attr/texttwocolor"
                        android:textSize="17sp"
                        android:layout_marginLeft="15dp"/>

                   <!-- <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/bold_roboto"
                        android:text="Anyone / Players I follow"
                        android:textColor="?attr/texttwocolor"
                        android:textSize="17sp"
                        tools:ignore="ContentDescription,HardcodedText" />

                    <Switch
                        android:id="@+id/sw_clubs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>-->

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/bold_roboto"
                    android:gravity="center_horizontal"
                    android:text="Who can poke me"
                    android:textAlignment="center"
                    android:textColor="?attr/textcolor"
                    android:textSize="20sp"
                    tools:ignore="ContentDescription,HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <RadioButton
                    android:id="@+id/radio_poke_anyone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anyone"
                    android:fontFamily="@font/bold_roboto"
                    android:textColor="?attr/texttwocolor"
                    android:textSize="17sp"
                    android:layout_marginLeft="-4dp"/>

                <RadioButton
                    android:id="@+id/radio_poke_private"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Players I follow"
                    android:fontFamily="@font/bold_roboto"
                    android:textColor="?attr/texttwocolor"
                    android:textSize="17sp"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/signUp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:stateListAnimator="@null"
        android:background="@drawable/btn_round"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/bold_roboto"
        android:gravity="center"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        tools:ignore="HardcodedText,UnusedAttribute" />

</androidx.constraintlayout.widget.ConstraintLayout>