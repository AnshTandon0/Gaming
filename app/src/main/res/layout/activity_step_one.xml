<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/layoutcolor"
    tools:context=".group.StepOneActivity"
    tools:ignore="Overdraw">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:padding="5dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_back"
        android:tint="#596C84"
        android:backgroundTint="?attr/backgroundcolor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,UnusedAttribute,UseAppTint" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/bold_roboto"
        android:text="Create Club"
        android:textColor="@color/colorPrimary"
        android:textSize="43sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="ContentDescription,HardcodedText" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bold_roboto"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Fill details to continue"
        android:textColor="#596C84"
        android:layout_marginStart="24dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
       tools:ignore="ContentDescription,HardcodedText" />-->


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_marginBottom="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:backgroundTint="?attr/backgroundcolor"
            tools:ignore="UnusedAttribute">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:fontFamily="@font/bold_roboto"
                android:gravity="center_vertical"
                android:hint="Club name"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColorHint="#8B8D93"
                android:textSize="20sp"
                tools:ignore="Autofill,HardcodedText" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:backgroundTint="?attr/backgroundcolor"
            tools:ignore="UnusedAttribute">

            <EditText
                android:id="@+id/username"
                android:inputType="text"
                android:digits="abcdefghijklmnopqrstuvwxyz0123456789._"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:fontFamily="@font/bold_roboto"
                android:gravity="center_vertical"
                android:hint="Username"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColorHint="#8B8D93"
                android:textSize="20sp"
                tools:ignore="Autofill,HardcodedText" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/btn_round"
            android:backgroundTint="?attr/backgroundcolor"
            tools:ignore="UnusedAttribute">

            <EditText
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:fontFamily="@font/bold_roboto"
                android:gravity="center_vertical"
                android:hint="Contact link"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColorHint="#8B8D93"
                android:textSize="20sp"
                tools:ignore="Autofill,HardcodedText,TextFields" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/btn_round"
            android:backgroundTint="?attr/backgroundcolor"
            tools:ignore="UnusedAttribute">

            <EditText
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:fontFamily="@font/bold_roboto"
                android:gravity="center_vertical"
                android:hint="Games we play"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColorHint="#8B8D93"
                android:textSize="20sp"
                tools:ignore="Autofill,HardcodedText" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bold_roboto"
            android:text="Club privacy"
            android:textColor="?attr/textcolor"
            android:textSize="20sp"
            tools:ignore="ContentDescription,HardcodedText"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp">

            <RadioButton
                android:id="@+id/radio_club_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Public"
                android:fontFamily="@font/bold_roboto"
                android:textColor="#596C84"
                android:textSize="20sp"
                android:layout_marginLeft="-3dp"/>

            <RadioButton
                android:id="@+id/radio_club_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private"
                android:fontFamily="@font/bold_roboto"
                android:textColor="#596C84"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"/>

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bold_roboto"
                android:text="Public / Private"
                android:textColor="?attr/textcolor"
                android:textSize="20sp"
                tools:ignore="ContentDescription,HardcodedText" />

            <Switch
                android:id="@+id/sw_clubs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>-->

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/btn_round"
        android:backgroundTint="@color/colorPrimary"
        android:text="Create"
        android:textSize="20sp"
        android:textColor="#fff"
        android:stateListAnimator="@null"
        android:fontFamily="@font/bold_roboto"
        android:gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorSize="25dp"
        android:layout_marginEnd="16dp"
        app:indicatorColor="#fff"
        android:id="@+id/progressBar"
        app:trackCornerRadius="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/next"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:indeterminate="true" />


</androidx.constraintlayout.widget.ConstraintLayout>