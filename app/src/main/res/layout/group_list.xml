<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:background="?attr/layoutcolor"
    android:layout_height="wrap_content"
    tools:ignore="Overdraw">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dp"
        android:src="@drawable/group"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:textColor="?attr/textcolor"
                        android:textSize="16sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/verified"
                    android:layout_width="15.5dp"
                    android:layout_height="15.5dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_verify"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/ll_c_engagement"
                    android:layout_width="38dp"
                    android:layout_height="15.5dp"
                    android:background="@drawable/ic_skill_bg"
                    android:orientation="horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="15.5dp"
                        android:layout_height="15.5dp"
                        android:src="@drawable/ic_club_rank" />

                    <TextView
                        android:id="@+id/txt_club_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="3dp"
                        android:fontFamily="@font/bold_roboto"
                        android:gravity="center"
                        android:text="000"
                        android:textColor="#B71BEE"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="ContentDescription,HardcodedText" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/bold_roboto"
                android:textColor="?attr/texttwocolor"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_notification_on"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_notifications_on"
            tools:ignore="ContentDescription"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            app:tint="#DDDFEB" />

        <ImageView
            android:id="@+id/img_notification_off"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_notifications_off"
            app:tint="#DDDFEB"
            tools:ignore="ContentDescription"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>