<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/layoutcolor"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".chat.ChatActivity"
    tools:ignore="Overdraw">
    
    <LinearLayout
        android:orientation="horizontal"
        android:background="?attr/layoutcolor"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:tint="?attr/texttwocolor"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dp"
                android:layout_width="40dp"
                android:layout_marginStart="14dp"
                android:layout_gravity="center"
                android:src="@drawable/avatar"
                android:layout_height="40dp"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/name"
                        android:textColor="?attr/textcolor"
                        android:fontFamily="@font/bold_roboto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_marginStart="5dp"
                        android:visibility="gone"
                        android:id="@+id/verify"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_verify"
                        android:layout_width="15.5dp"
                        android:layout_height="15.5dp"
                        android:layout_marginTop="1dp"
                        android:contentDescription="TODO"
                       tools:ignore="ContentDescription,HardcodedText" />

                    <ImageView
                        android:id="@+id/admin"
                        android:layout_width="15.5dp"
                        android:layout_height="15.5dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/ic_admin"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="38dp"
                        android:layout_height="15.5dp"
                        android:background="@drawable/ic_engagement_bg"
                        android:orientation="horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp">

                        <ImageView
                            android:layout_width="15.5dp"
                            android:layout_height="15.5dp"
                            android:src="@drawable/ic_engagement"/>

                        <TextView
                            android:id="@+id/txt_post_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold_roboto"
                            android:text="000"
                            android:textColor="#DC271B"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="ContentDescription,HardcodedText"
                            android:layout_marginEnd="3dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="38dp"
                        android:layout_height="15.5dp"
                        android:background="@drawable/ic_skill_bg"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp">

                        <ImageView
                            android:layout_width="15.5dp"
                            android:layout_height="15.5dp"
                            android:src="@drawable/ic_skill"/>

                        <TextView
                            android:id="@+id/txt_fight_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold_roboto"
                            android:text="000"
                            android:textColor="#BB1AF3"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="ContentDescription,HardcodedText"
                            android:layout_marginEnd="3dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:textSize="13sp"
                        android:id="@+id/time"
                        android:textColor="?attr/texttwocolor"
                        android:fontFamily="@font/bold_roboto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_marginStart="6dp"
                        android:id="@+id/online"
                        android:layout_marginTop="2dp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:src="@drawable/circle"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        app:tint="#4CAF50"
                        android:contentDescription="TODO"
                        tools:ignore="ContentDescription,HardcodedText" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fight_log"
                android:padding="8dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_group_fight_log"
                android:background="@drawable/circle"
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText" />

            <!--<TextView
                android:id="@+id/fight_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/round_cornner_btn"
                android:fontFamily="@font/bold_roboto"
                android:text=" + Fight Log "
                android:textSize="15sp"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>-->

            <!--<ImageView
                android:id="@+id/audio_call"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:padding="3dp"
                android:src="@drawable/ic_audio_call"
                app:tint="@color/colorPrimary"
                tools:ignore="ContentDescription,HardcodedText" />-->

            <!--<ImageView
                android:padding="3dp"
                android:id="@+id/video_call"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_video_call"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:tint="@color/colorPrimary"
                android:contentDescription="TODO"
               tools:ignore="ContentDescription,HardcodedText" />-->

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:trackThickness="2dp"
        app:trackCornerRadius="2dp"
        android:indeterminate="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:ignore="NestedWeights">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:id="@+id/mediaRecord"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <com.devlomi.record_view.RecordView
                    android:id="@+id/record_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/layoutcolor"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@id/record_button"
                    app:counter_time_color="#DD2D20"
                    app:slide_to_cancel_arrow="@drawable/ic_back"
                    app:slide_to_cancel_arrow_color="?attr/texttwocolor"
                    app:slide_to_cancel_bounds="8dp"
                    app:slide_to_cancel_margin_right="10dp"
                    app:slide_to_cancel_text="Slide To Cancel" />

                <com.devlomi.record_view.RecordButton
                    android:id="@+id/record_button"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/recv_bg_mic"
                    android:backgroundTint="@color/colorPrimary"
                    android:scaleType="centerInside"
                    app:mic_icon="@drawable/ic_mic" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/typing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include layout="@layout/typing"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:background="?attr/layoutcolor"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/add"
            android:padding="7dp"
            android:background="@drawable/circle"
            android:backgroundTint="?attr/backgroundcolor"
            android:src="@drawable/ic_plus"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:tint="#596C84"
            android:contentDescription="TODO"
           tools:ignore="ContentDescription,HardcodedText" />

        <LinearLayout
            android:background="@drawable/btn_round"
            android:backgroundTint="?attr/backgroundcolor"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="35dp">

            <com.hendraanggrian.appcompat.widget.SocialEditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:background="@null"
                android:fontFamily="@font/bold_roboto"
                android:hint="Send a message..."
                android:inputType="text"
                android:maxLines="1"
                android:textColor="?attr/textcolor"
                android:textColorHint="?attr/texttwocolor"
                android:textSize="14sp"
                app:hashtagColor="@color/colorPrimary"
                app:mentionColor="@color/colorPrimary"
                app:socialFlags="hashtag|mention"
                tools:ignore="ContentDescription,HardcodedText,TouchTargetSizeCheck" />

        </LinearLayout>

        <ImageView
            android:id="@+id/message_send"
            android:padding="5dp"
            android:src="@drawable/ic_send"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:tint="@color/colorPrimary"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>