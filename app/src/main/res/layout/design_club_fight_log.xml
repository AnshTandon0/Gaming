<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?attr/layoutcolor"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_main_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_club_scrim_bg"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/fight_user_bg">

                    <LinearLayout
                        android:id="@+id/ll_trophy1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/fight_trophy_bg"
                        android:layout_alignParentRight="true"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_fight_trophy"
                            android:padding="7dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/dpiv1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/avatar" />

                        <TextView
                            android:id="@+id/user1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold_roboto"
                            android:gravity="center"
                            android:text="user1"
                            android:textColor="?attr/textcolor"
                            android:textSize="16sp"
                            tools:ignore="ContentDescription,HardcodedText" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/verified1"
                                android:layout_width="15.5dp"
                                android:layout_height="15.5dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_verify"
                                android:visibility="gone"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:id="@+id/admin1"
                                android:layout_width="15.5dp"
                                android:layout_height="15.5dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_admin"
                                android:visibility="gone"
                                tools:ignore="ContentDescription" />

                            <LinearLayout
                                android:id="@+id/ll_g_engagement1"
                                android:layout_width="38dp"
                                android:layout_height="15.5dp"
                                android:layout_marginStart="5dp"
                                android:background="@drawable/ic_engagement_bg"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="15.5dp"
                                    android:layout_height="15.5dp"
                                    android:src="@drawable/ic_engagement" />

                                <TextView
                                    android:id="@+id/txt_post_count1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="@font/bold_roboto"
                                    android:gravity="center"
                                    android:text="000"
                                    android:textColor="#DC271B"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    tools:ignore="ContentDescription,HardcodedText" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_g_skill1"
                                android:layout_width="38dp"
                                android:layout_height="15.5dp"
                                android:layout_marginStart="5dp"
                                android:background="@drawable/ic_skill_bg">

                                <ImageView
                                    android:layout_width="15.5dp"
                                    android:layout_height="15.5dp"
                                    android:src="@drawable/ic_skill" />

                                <TextView
                                    android:id="@+id/txt_fight_count1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="@font/bold_roboto"
                                    android:gravity="center"
                                    android:text="000"
                                    android:textColor="#BB1AF3"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    tools:ignore="ContentDescription,HardcodedText" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold_roboto"
                    android:text="  in  "
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="ContentDescription,HardcodedText"
                    android:layout_gravity="center_vertical"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/fight_user_bg">

                    <LinearLayout
                        android:id="@+id/ll_trophy2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/fight_trophy_bg"
                        android:layout_alignParentRight="true"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_fight_trophy"
                            android:padding="7dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/dpiv2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/avatar" />

                        <TextView
                            android:id="@+id/user2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold_roboto"
                            android:gravity="center"
                            android:text="user1"
                            android:textColor="?attr/textcolor"
                            android:textSize="16sp"
                            tools:ignore="ContentDescription,HardcodedText" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/verified2"
                                android:layout_width="15.5dp"
                                android:layout_height="15.5dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_verify"
                                android:visibility="gone"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:id="@+id/admin2"
                                android:layout_width="15.5dp"
                                android:layout_height="15.5dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_admin"
                                android:visibility="gone"
                                tools:ignore="ContentDescription" />

                            <LinearLayout
                                android:id="@+id/ll_g_engagement2"
                                android:layout_width="38dp"
                                android:layout_height="15.5dp"
                                android:layout_marginStart="5dp"
                                android:background="@drawable/ic_engagement_bg"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="15.5dp"
                                    android:layout_height="15.5dp"
                                    android:src="@drawable/ic_engagement" />

                                <TextView
                                    android:id="@+id/txt_post_count2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="@font/bold_roboto"
                                    android:gravity="center"
                                    android:text="000"
                                    android:textColor="#DC271B"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    tools:ignore="ContentDescription,HardcodedText" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_g_skill2"
                                android:layout_width="38dp"
                                android:layout_height="15.5dp"
                                android:layout_marginStart="5dp"
                                android:background="@drawable/ic_skill_bg"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="15.5dp"
                                    android:layout_height="15.5dp"
                                    android:src="@drawable/ic_skill" />

                                <TextView
                                    android:id="@+id/txt_fight_count2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="@font/bold_roboto"
                                    android:gravity="center"
                                    android:text="000"
                                    android:textColor="#BB1AF3"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    tools:ignore="ContentDescription,HardcodedText" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_c_engagement2"
                                android:layout_width="38dp"
                                android:layout_height="15.5dp"
                                android:background="@drawable/ic_skill_bg"
                                android:orientation="horizontal"
                                android:layout_marginLeft="5dp">

                                <ImageView
                                    android:layout_width="15.5dp"
                                    android:layout_height="15.5dp"
                                    android:src="@drawable/ic_club_rank" />

                                <TextView
                                    android:id="@+id/txt_club_count2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="@font/bold_roboto"
                                    android:gravity="center"
                                    android:text="000"
                                    android:textColor="#B71BEE"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    tools:ignore="ContentDescription,HardcodedText" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/fight_score_bg"
                android:gravity="center"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/txt_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1 vs 1"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold_roboto"
                        android:gravity="center"/>

                </LinearLayout>

                <View
                    android:id="@+id/view_line"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#1476CF"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/txt_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mixed"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold_roboto"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mode"
                        android:textSize="14sp"
                        android:textColor="?attr/texttwocolor"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold_roboto"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/txt_total_round"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold_roboto"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rounds"
                        android:textSize="14sp"
                        android:textColor="?attr/texttwocolor"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold_roboto"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/txt_won"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#569C3E"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold_roboto"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Won"
                        android:textSize="14sp"
                        android:textColor="?attr/texttwocolor"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold_roboto"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_official"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fight_user_bg"
                android:backgroundTint="#bbeeab"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_official"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Official Result"
                    android:textSize="11sp"
                    android:textColor="#259900"
                    android:fontFamily="@font/bold_roboto"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_unofficial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fight_user_bg"
                android:backgroundTint="#FFBBB0"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_unofficial"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unofficial Result"
                    android:textSize="11sp"
                    android:textColor="#E42002"
                    android:fontFamily="@font/bold_roboto"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_game_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game Name"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/bold_roboto"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="13sp"
                android:textColor="#A4ffffff"
                android:textStyle="bold"
                android:fontFamily="@font/bold_roboto"
                android:gravity="center"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

        <com.tylersuehr.socialtextview.SocialTextView
            android:fontFamily="@font/bold_roboto"
            app:mentionColor="@color/colorPrimary"
            app:emailColor="@color/colorPrimary"
            app:phoneColor="@color/colorPrimary"
            app:hashtagColor="@color/colorPrimary"
            app:selectedColor="@color/colorPrimary"
            app:urlColor="@color/colorPrimary"
            android:textColor="?attr/textcolor"
            android:id="@+id/text"
            android:text="Description"
            android:textSize="16sp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/likeLayout"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/thumb"
                        android:src="@drawable/ic_thumb"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                        tools:ignore="ContentDescription,HardcodedText" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/love"
                        android:src="@drawable/ic_love"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                        tools:ignore="ContentDescription,HardcodedText" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/laugh"
                        android:src="@drawable/ic_laugh"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                        tools:ignore="ContentDescription,HardcodedText" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/wow"
                        android:src="@drawable/ic_wow"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                        tools:ignore="ContentDescription,HardcodedText" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/sad"
                        android:src="@drawable/ic_sad"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                        tools:ignore="ContentDescription,HardcodedText" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/angry"
                        android:src="@drawable/ic_angry"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                        tools:ignore="ContentDescription,HardcodedText" />

                </LinearLayout>

                <TextView
                    android:id="@+id/noLikes"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold_roboto"
                    android:textColor="?attr/texttwocolor"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_marginStart="4dp"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold_roboto"
                    android:text="Reacts"
                    android:textColor="?attr/texttwocolor"
                    tools:ignore="HardcodedText,SmallSp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout"
                android:visibility="gone"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/commentLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/noComments"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:textColor="?attr/texttwocolor"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:text="Opinions"
                        android:textColor="?attr/texttwocolor"
                        tools:ignore="HardcodedText,SmallSp" />
                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/viewsLayout"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/noViews"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:textColor="?attr/texttwocolor"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:layout_marginStart="4dp"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:text="Views"
                        android:textColor="?attr/texttwocolor"
                        tools:ignore="HardcodedText,SmallSp" />

                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/line"
            android:alpha="0.5"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:background="?attr/texttwocolor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="DisableBaselineAlignment">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/likeButton"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ObsoleteLayoutParam,UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/like_img"
                        android:src="@drawable/ic_fight_react"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="TODO"
