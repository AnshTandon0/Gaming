<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/layoutcolor"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".group.GroupChatActivity"
    tools:ignore="Overdraw">
    
    <LinearLayout
        android:orientation="horizontal"
        android:background="?attr/layoutcolor"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:tint="?attr/texttwocolor"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dp"
                android:layout_width="40dp"
                android:layout_marginStart="14dp"
                android:layout_gravity="center"
                android:src="@drawable/group"
                android:layout_height="40dp"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:textColor="?attr/textcolor"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/ll_verified"
                        android:layout_width="15.5dp"
                        android:layout_height="15.5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/verified"
                            android:layout_width="15.5dp"
                            android:layout_height="15.5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_verify"
                            android:visibility="gone"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_c_engagement"
                        android:layout_width="38dp"
                        android:layout_height="15.5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/ic_skill_bg"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="15.5dp"
                            android:layout_height="15.5dp"
                            android:src="@drawable/ic_club_rank" />

                        <TextView
                            android:id="@+id/txt_club_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="2dp"
                            android:fontFamily="@font/bold_roboto"
                            android:gravity="center"
                            android:text="000"
                            android:textColor="#B71BEE"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="ContentDescription,HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:textSize="13sp"
                        android:id="@+id/username"
                        android:textColor="?attr/texttwocolor"
                        android:fontFamily="@font/bold_roboto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <ImageView
                        app:tint="#4CAF50"
                        android:id="@+id/imageView2"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:visibility="gone"
                        android:src="@drawable/circle"
                        android:contentDescription="TODO"
                        tools:ignore="ContentDescription,HardcodedText"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_group_fight_log"
                android:padding="8dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_group_fight_log"
                android:background="@drawable/circle"
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText" />

            <!--<ImageView
                android:id="@+id/audio_call"
                android:padding="3dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_audio_call"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:tint="@color/colorPrimary"
                android:contentDescription="TODO"
               tools:ignore="ContentDescription,HardcodedText" />-->

            <!--<ImageView
                android:padding="3dp"
                android:id="@+id/video_call"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_video_call"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:tint="@color/colorPrimary"
                android:contentDescription="TODO"
               tools:ignore="ContentDescription,HardcodedText" />-->

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:trackThickness="2dp"
        app:trackCornerRadius="2dp"
        android:indeterminate="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:ignore="NestedWeights">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"/>

            <!--<RelativeLayout
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:id="@+id/mediaRecord"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <com.devlomi.record_view.RecordView
                    android:id="@+id/record_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/layoutcolor"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@id/record_button"
                    app:counter_time_color="#DD2D20"
                    app:slide_to_cancel_arrow="@drawable/ic_back"
                    app:slide_to_cancel_arrow_color="?attr/texttwocolor"
                    app:slide_to_cancel_bounds="8dp"
                    app:slide_to_cancel_margin_right="10dp"
                    app:slide_to_cancel_text="Slide To Cancel" />

                <com.devlomi.record_view.RecordButton
                    android:id="@+id/record_button"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/recv_bg_mic"
                    android:backgroundTint="@color/colorPrimary"
                    android:scaleType="centerInside"
                    app:mic_icon="@drawable/ic_mic" />

            </RelativeLayout>-->

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/onlineList"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_replying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="?attr/backgroundcolor"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Replying to... "
                android:textSize="12sp"
                android:textColor="#040404"
                android:fontFamily="@font/bold_roboto"/>

            <TextView
                android:id="@+id/txt_replay_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="12sp"
                android:fontFamily="@font/bold_roboto"/>

            <TextView
                android:id="@+id/txt_replay_user_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" User msg"
                android:textSize="12sp"
                android:fontFamily="@font/bold_roboto"
                android:maxLines="1"
                android:ellipsize="end"/>

            <ImageView
                android:id="@+id/img_cancel_reply"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:maxLines="1"
                android:src="@drawable/ic_cancel"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cust_sticker_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="?attr/backgroundcolor"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom emoji: "
                android:textSize="12sp"
                android:textColor="#040404"
                android:fontFamily="@font/bold_roboto"/>

            <TextView
                android:id="@+id/cust_sticker_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Emoji name"
                android:textSize="12sp"
                android:fontFamily="@font/bold_roboto"
                android:maxLines="1"
                android:ellipsize="end"/>

            <ImageView
                android:id="@+id/img_cancel_cut_sticker"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:maxLines="1"
                android:src="@drawable/ic_cancel"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/extra"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/announcement"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="?attr/layoutcolor"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/add"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/circle"
            android:backgroundTint="?attr/backgroundcolor"
            android:contentDescription="TODO"
            android:padding="7dp"
            android:src="@drawable/ic_plus"
            app:tint="#596C84"
            tools:ignore="ContentDescription,HardcodedText" />

        <LinearLayout
            android:background="@drawable/btn_round"
            android:backgroundTint="?attr/backgroundcolor"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="35dp">

            <com.hendraanggrian.appcompat.widget.SocialEditText
                android:id="@+id/editText"
                android:textSize="14sp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:background="@null"
                android:maxLines="1"
                android:textColor="?attr/textcolor"
                android:inputType="text"
                android:textColorHint="?attr/texttwocolor"
                android:hint="Send a message..."
                android:fontFamily="@font/bold_roboto"
                android:layout_width="match_parent"
                app:hashtagColor="@color/colorPrimary"
                app:mentionColor="@color/colorPrimary"
                app:socialFlags="hashtag|mention"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription,HardcodedText"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_send_cut_sticker"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/custom_sticker"/>

            <ImageView
                android:id="@+id/img_send_sticker"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/send_sticker_icon"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:padding="1dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/message_send"
            android:padding="5dp"
            android:src="@drawable/ic_send"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:tint="@color/colorPrimary"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_custome_stiker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/screen_bg_color"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Custom emojis"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/bold_roboto"/>

            <TextView
                android:id="@+id/txt_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/bold_roboto"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_emojis"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:overScrollMode="never"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>