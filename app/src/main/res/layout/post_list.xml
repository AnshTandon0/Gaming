<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?attr/layoutcolor"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/avatar"
     />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:text="Name"
                        android:textColor="?attr/textcolor"
                        android:textSize="16sp"
                        tools:ignore="ContentDescription,HardcodedText" />


                </LinearLayout>


                <ImageView
                    android:id="@+id/verified"
                    android:layout_width="15.5dp"
                    android:layout_height="15.5dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_verify"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/admin"
                    android:layout_width="15.5dp"
                    android:layout_height="15.5dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_admin"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/ll_g_engagement"
                    android:layout_width="38dp"
                    android:layout_height="15.5dp"
                    android:background="@drawable/ic_engagement_bg"
                    android:orientation="horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="4.5dp">

                    <ImageView
                        android:layout_width="15.5dp"
                        android:layout_height="15.5dp"
                        android:src="@drawable/ic_engagement"/>

                    <TextView
                        android:id="@+id/txt_post_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:text="0"
                        android:textColor="#F42407"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="ContentDescription,HardcodedText"
                        android:layout_marginEnd="2dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_g_skill"
                    android:layout_width="38dp"
                    android:layout_height="15.5dp"
                    android:background="@drawable/ic_skill_bg"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="4.5dp">

                    <ImageView
                        android:layout_width="15.5dp"
                        android:layout_height="15.5dp"
                        android:src="@drawable/ic_skill"/>

                    <TextView
                        android:id="@+id/txt_fight_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:text="000"
                        android:textColor="#B71BEE"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="ContentDescription,HardcodedText"
                        android:layout_marginEnd="2dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_c_engagement"
                    android:layout_width="38dp"
                    android:layout_height="15.5dp"
                    android:background="@drawable/ic_skill_bg"
                    android:orientation="horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="4.5dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="15.5dp"
                        android:layout_height="15.5dp"
                        android:src="@drawable/ic_club_rank" />

                    <TextView
                        android:id="@+id/txt_club_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="2dp"
                        android:fontFamily="@font/bold_roboto"
                        android:gravity="center"
                        android:text="000"
                        android:textColor="#B71BEE"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="ContentDescription,HardcodedText" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_feeling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/feeling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bold_roboto"
                    android:textColor="?attr/textcolor"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/activity"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/bold_roboto"
                    android:text="Username"
                    android:textColor="?attr/texttwocolor"
                    android:textSize="12sp"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    android:id="@+id/dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/bold_roboto"
                    android:text="  -  "
                    android:textColor="?attr/texttwocolor"
                    android:textSize="12sp"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/bold_roboto"
                    android:textColor="?attr/texttwocolor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/location"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/bold_roboto"
                    android:textColor="?attr/texttwocolor"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:padding="2dp"
            android:src="@drawable/ic_more"

            app:tint="?attr/texttwocolor"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,HardcodedText" />

    </LinearLayout>

        <com.tylersuehr.socialtextview.SocialTextView
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bold_roboto"
            app:mentionColor="@color/colorPrimary"
            app:emailColor="@color/colorPrimary"
            app:phoneColor="@color/colorPrimary"
            app:hashtagColor="@color/colorPrimary"
            app:selectedColor="@color/colorPrimary"
            app:urlColor="@color/colorPrimary"
            android:textColor="?attr/textcolor"
            android:id="@+id/text"
            android:textSize="16sp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/media"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:id="@+id/mediaView"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="TODO"
               tools:ignore="ContentDescription,HardcodedText" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/details"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/likeLayout"
                android:layout_margin="8dp"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/thumb"
                        android:src="@drawable/ic_thumb"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                       tools:ignore="ContentDescription,HardcodedText" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/love"
                        android:src="@drawable/ic_love"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                       tools:ignore="ContentDescription,HardcodedText" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/laugh"
                        android:src="@drawable/ic_laugh"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                       tools:ignore="ContentDescription,HardcodedText" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/wow"
                        android:src="@drawable/ic_wow"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                       tools:ignore="ContentDescription,HardcodedText" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/sad"
                        android:src="@drawable/ic_sad"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                       tools:ignore="ContentDescription,HardcodedText" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/angry"
                        android:src="@drawable/ic_angry"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                       tools:ignore="ContentDescription,HardcodedText" />

                </LinearLayout>

                <TextView
                    android:id="@+id/noLikes"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold_roboto"
                    android:textColor="?attr/texttwocolor"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_marginStart="4dp"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold_roboto"
                    android:text="Reacts"
                    android:textColor="?attr/texttwocolor"
                    tools:ignore="HardcodedText,SmallSp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout"
                android:visibility="gone"
                android:layout_margin="8dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/commentLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/noComments"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:textColor="?attr/texttwocolor"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:text="Opinions"
                        android:textColor="?attr/texttwocolor"
                        tools:ignore="HardcodedText,SmallSp" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/viewsLayout"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/noViews"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:textColor="?attr/texttwocolor"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:layout_marginStart="4dp"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:text="Views"
                        android:textColor="?attr/texttwocolor"
                        tools:ignore="HardcodedText,SmallSp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/line"
            android:alpha="0.5"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:background="?attr/texttwocolor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="DisableBaselineAlignment">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/likeButton"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ObsoleteLayoutParam,UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/like_img"
                        android:src="@drawable/ic_fight_react"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="TODO"
                       tools:ignore="ContentDescription,HardcodedText" />

                    <TextView
                        android:id="@+id/like_text"
                        android:layout_marginStart="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold_roboto"
                        android:text="React"
                        android:textColor="?attr/texttwocolor"
                        android:textSize="15sp"
                       tools:ignore="ContentDescription,HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/likeButtonTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="TODO"
                        android:src="@drawable/ic_fight_react"
                        tools:ignore="ContentDescription,HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/bold_roboto"
                        android:text="React"
                        android:textColor="?attr/texttwocolor"
                        android:textSize="15sp"
                        tools:ignore="ContentDescription,HardcodedText" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/comment"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:src="@drawable/ic_fight_opinion"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:tint="?attr/texttwocolor"
                    android:contentDescription="TODO"
                   tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    android:layout_marginStart="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold_roboto"
                    android:text="Opinion"
                    android:textColor="?attr/texttwocolor"
                    android:textSize="15sp"
                   tools:ignore="ContentDescription,HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share"
                android:gravity="end"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    app:tint="?attr/texttwocolor"
                    android:src="@drawable/ic_fight_spread"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="TODO"
                   tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    android:layout_marginStart="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold_roboto"
                    android:text="Spread"
                    android:textColor="?attr/texttwocolor"
                    android:textSize="15sp"
                   tools:ignore="ContentDescription,HardcodedText" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ad"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
      >

        <com.google.android.ads.nativetemplates.TemplateView
            android:id="@+id/my_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:gnt_template_type="@layout/gnt_small_template_view" />

    </RelativeLayout>


</LinearLayout>